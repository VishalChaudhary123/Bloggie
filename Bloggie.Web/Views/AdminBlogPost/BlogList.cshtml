@model IEnumerable<Bloggie.Web.Models.Domain.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Blogt List - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Title</th>
                    <th>Content</th>
                   @*  <th>Short Description</th>
                    <th>Featured Image Url</th>
                    <th> Url Handle</th>
                    <th> Publish Date</th>
                    <th> Author</th>
                    <th> Is Visible?</th>
                    <th> Tags</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>@blogPost.PageTitle</td>
                       @*  <td>@blogPost.Content</td>
                        <td>@blogPost.ShortDescription</td>
                        <td>@blogPost.FeaturedImageUrl</td>
                        <td>@blogPost.UrlHandle</td>
                        <td>@blogPost.PublishedDate.ToString("yyyy-MM-dd")</td>
                        <td>@blogPost.Author</td>
                        <td>@blogPost.Visible</td> *@

                        <td>
                            <div class="d-flex">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-primary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-asp-area="" asp-controller="AdminBlogPost" asp-action="Edit" asp-route-id="@blogPost.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No blog post found!</p>
    }
   
</div>